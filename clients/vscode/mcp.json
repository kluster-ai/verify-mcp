{
  "inputs": [
    {
      "type": "promptString",
      "id": "kluster-api-key",
      "description": "kluster.ai API Key",
      "password": true
    }
  ],
  "servers": {
    "kluster-verify-mcp": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "kluster-verify-mcp",
        "--api-key",
        "${input:kluster-api-key}",
        "--base-url",
        "https://api.kluster.ai/v1"
      ]
    }
  }
}