{
  "name": "kluster-verify-mcp",
  "version": "1.0.0",
  "description": "MCP server for kluster verify",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http-streamable": "tsx clients/http-streamable-server/http-streamable-server.ts",
    "start": "node build/index.js",
    "start:n8n": "node build/clients/n8n/sse-server.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t kluster-verify-mcp .",
    "docker:run": "docker run --rm -i --env-file .env kluster-verify-mcp",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [
    "mcp",
    "kluster.ai",
    "verification",
    "fact-checking"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "commander": "^12.0.0",
    "cors": "^2.8.0",
    "eventsource": "^4.0.0",
    "express": "^4.18.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
